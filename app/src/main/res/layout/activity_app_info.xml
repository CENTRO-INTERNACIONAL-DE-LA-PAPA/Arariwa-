<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="15dp"
    tools:context=".AppInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="#5FFF"
            app:srcCompat="@drawable/logo2"
            android:layout_marginBottom="30dp"/>
        <ImageView
            android:id="@+id/imageViewphyto"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="#5FFF"
            app:srcCompat="@drawable/phyto" />
        <TextView
            android:id="@+id/lbl_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="PhytoControl 360"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#594a42"
            />

        <TextView
            android:id="@+id/lbl_info_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="#594a42"
            android:text="string/inf_subtitle"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_masinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9FFF"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/lbl_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="string/inf_text"
                android:textSize="12dp"
                android:textColor="#8d827c"
                />
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconoweb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="www.cipotato.org"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#8d827c"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconomail"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="cip-phytocontrol360support@cgiar.org"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#8d827c"
                />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_info_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >

        <TextView
            android:id="@+id/lbl_info_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="string/inf_foot"
            android:textColor="#613b15"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/copyr" />

            <TextView
                android:id="@+id/lbl_info_footcopyr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="string/inf_text"
                android:textColor="#6e6f71"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>